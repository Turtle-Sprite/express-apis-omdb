<%- include('partials/header.ejs') %>
<h1>Results for search</h1>
<% films.forEach(film => { %>
    <div>
        <h2><%= film.Title %></h2>
        <p><%= film.Year %></p>
        <% if (film.Poster !== "N/A") {%>
        <img alt="<%= film.Title %>" src="<%= film.Poster %>" >
        <% } else { %>
            <p>No poster available</p>
        <% } %>
        <div>
        <a href="/movies/<%=film.imdbID%>">IMDB</a>
        </div>
    </div>
<% }) %>

<%- include('partials/footer.ejs')%>